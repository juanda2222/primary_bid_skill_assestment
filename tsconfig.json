


{
  "compilerOptions": {
    
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,                       
    "rootDir": "./src",
    "outDir": "build",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
  },
  "exclude": [
    "node_modules",
    "src/front",
    "src/server/public",
    "src/tests",
    "deploy",
    "build",
    "jest.config.js",
    "**/*.spec.ts"
  ],
  
}