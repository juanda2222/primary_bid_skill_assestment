


{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,                       
    "rootDir": ".",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
  },
  "exclude": [
    "node_modules",
    "front",
    "deploy",
    "credentials",
    "server/public",
    "tests",
    "build",
    "**/*.spec.ts"
  ]
}